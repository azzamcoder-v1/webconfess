# Production Environment Variables
NODE_ENV=production
PORT=3000

# Server Configuration
HOST=0.0.0.0

# WhatsApp Bot Configuration
WHATSAPP_SESSION_PATH=./whatsapp-session
WHATSAPP_CLIENT_ID=confess-bot-production

# Rate Limiting
RATE_LIMIT_POINTS=5
RATE_LIMIT_DURATION=60

# Security
HELMET_ENABLED=true
CORS_ORIGIN=https://your-domain.com

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Process Management
MAX_MEMORY_RESTART=1024
RESTART_DELAY=5000

# WhatsApp Puppeteer Configuration (VPS Optimized)
PUPPETEER_ARGS=--no-sandbox,--disable-setuid-sandbox,--disable-dev-shm-usage,--disable-accelerated-2d-canvas,--no-first-run,--no-zygote,--single-process,--disable-gpu,--disable-web-security,--disable-features=VizDisplayCompositor

# Optional: Admin Panel Security
# ADMIN_USERNAME=admin
# ADMIN_PASSWORD=your-secure-password

# Optional: Database (if you plan to add logging/analytics)
# DATABASE_URL=mongodb://localhost:27017/confess-anonymous
# REDIS_URL=redis://localhost:6379

# Optional: Monitoring
# SENTRY_DSN=your-sentry-dsn
# ANALYTICS_ID=your-analytics-id

# Timezone
TZ=Asia/Jakarta
